{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch-build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "./bin/npm run watch",
            "options": {
            },
            "isBackground": true,
            "problemMatcher": {
                "base": "$tsc-watch",
                "fileLocation": ["relative", "${workspaceRoot}"]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}